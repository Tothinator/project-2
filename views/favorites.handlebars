<h3>{{user}}'s Favorite Recipes</h3>

<div class="favorite-container">
    <div class="card-columns">
        {{#each recipes}}
        <div class="card">
            <img src= {{this.imageLink}} class="card-img-top" alt="...">
            <div class="card-body">
            <a href={{this.recipeLink}} target="_blank"><h5 class="card-title">{{this.recipeName}}</h5></a>
            </div>
        </div>
        {{/each}} 
    </div>
</div>
