<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginWithModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="loginWithModal">Login</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="login-form">
                    <div class="form-group">
                        <label for="usernameLogin">Username</label>
                        <input type="name" class="form-control" id="usernameLogin" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                        <label for="userPasswordLogin">Password</label>
                        <input type="password" class="form-control" id="userPasswordLogin" placeholder="Password" required>
                    </div>
                    <button id="login-submit" type="submit" class="btn btn-primary">Submit</button>
                    <hr class="my-2">
                </form>
                <form id="signup-form">
                    <div class="form-group">
                        <label for="usernameSignup">Username</label>
                        <input type="name" class="form-control" id="usernameSignup" placeholder="Enter username" required>
                    </div>
                    <div class="form-group">
                        <label for="userPasswordSignup">Password</label>
                        <input type="password" class="form-control" id="userPasswordSignup" placeholder="Password" required>
                    </div>
                    <div class="form-group">
                        <label for="confirmPassword">Re-enter Password</label>
                        <input type="password" class="form-control" id="confirmPassword" placeholder="Password" required>
                        <small id="passwordMatch" class="form-text"></small>
                    </div>
                    <button id="signup-submit" type="submit" class="btn btn-primary">Submit</button>
                    <hr class="my-2">
                </form>
            </div>
            <div class="modal-footer">
                <a id="login-btn" class="btn btn-primary btn-lg" href="#" role="button">Login</a>
                <a id="signup-btn" class="btn btn-primary btn-lg" href="#" role="button">Sign Up</a>
            </div>
        </div>
    </div>
</div>

